<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SuhuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Konversi Suhu"
            android:textAlignment="center"
            android:textSize="25dp"
            android:layout_marginBottom="25dp"
            />

        <EditText
            android:id="@+id/nSuhu"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal"
            android:hint="Masukan Suhu"
            android:textAlignment="center"
            android:textSize="25dp"
            />

        <Button
            android:id="@+id/cTf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Celcius ke Fahrenheit"
            android:textAlignment="center"
            android:textSize="25dp"
            android:layout_marginTop="25dp"
            android:textAllCaps="false"
            />

        <Button
            android:id="@+id/fTc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fahrenheit ke Celcius"
            android:textAlignment="center"
            android:textSize="25dp"
            android:layout_marginTop="25dp"
            android:textAllCaps="false"
            />

        <TextView
            android:id="@+id/vHasil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0 Derajat"
            android:textAlignment="center"
            android:textSize="25dp"
            android:layout_marginTop="25dp"
            />

        <Button
            android:id="@+id/btnRtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kembali"
            android:textAlignment="center"
            android:textSize="25dp"
            android:layout_marginTop="150dp"
            />

    </LinearLayout>
</RelativeLayout>